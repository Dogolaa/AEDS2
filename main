#include <fstream>
#include <iostream>
#include <cstdlib>
#include <valarray>

using namespace std;


typedef struct Tcars{
        
        string modelo;
        string marca;
        string tipo;
        int ano;
        int km;
        float potencia;
        string combustivel;
        string cambio;
        string direcao;
        string cor;
        int portas;
        string placa;
        float valor;
    };
    
     int printCarro(Tcars * bd[],int tam,int i){
          
             cout << bd[i]->modelo << " ";
             cout << bd[i]->marca << " ";
             cout << bd[i]->tipo << " ";
             cout << bd[i]->ano << " ";
             cout << bd[i]->km << " ";
             cout << bd[i]->potencia << " ";
             cout << bd[i]->combustivel << " ";
             cout << bd[i]->cambio << " ";
             cout << bd[i]->direcao << " ";
             cout << bd[i]->cor << " ";
             cout << bd[i]->portas << " ";
             cout << bd[i]->placa << " ";
             cout << bd[i]->valor << " ";
         
          
      }
    
 int busca(Tcars * bd[], int tam, string placa){
          int loc;
        for (int i = 0; i < tam; i++){
            if(bd[i]->placa == placa){
                cout << "Carro encontrado: "<< endl;
                printCarro(bd,tam,i);
                return loc;
            }
            loc ++;
        }
          cout << "Veiculo nao encontrado" << endl;
          return -1;
    }
    
    
 int removeCarro(cars * bd[], int *tam,int index){
     delete(bd[index]);
     for(int i = index; i < *tam - 1;i++){
         bd[i] = bd[i+1];
     }
     if (*tam > index){
         *tam -= 1;
     }
 }  

     

int main(int argc, char**argv) {
    
    
     
    ifstream myfile ("BD_veiculos.txt");
    Tcars *bd[50];
    int tam = 0;
    string buscaplaca;
    
    if(myfile.is_open()){
        while ( !myfile.eof()){
   
            bd[tam] = new Tcars;
            myfile >> bd[tam]->modelo;
            myfile >> bd[tam]->marca;
            myfile >> bd[tam]->tipo;
            myfile >> bd[tam]->ano;
            myfile >> bd[tam]->km;
            myfile >> bd[tam]->potencia;
            myfile >> bd[tam]->combustivel;
            myfile >> bd[tam]->cambio;
            myfile >> bd[tam]->direcao;
            myfile >> bd[tam]->cor;
            myfile >> bd[tam]->portas;
            myfile >> bd[tam]->placa;
            myfile >> bd[tam]->valor;
            tam++;
        }
         myfile.close();
        
      cout << "Insira a placa que deseja buscar" << endl;   
      cin >> buscaplaca;
    busca(bd,tam,buscaplaca);
    
    
    for (int i = tam; i < 50; i++)
        bd[i]= NULL;
    for (int i = 0; i < tam; i++)
        delete (bd[i]);
         }
    
    else{
        cout << "Unable to open file";
    }
     

    return 0;
}

