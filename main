        string marca;
        string tipo;
        int ano;
        int km;
        float potencia;
        string combustivel;
        string cambio;
        string direcao;
        string cor;
        int portas;
        string placa;
    };

    Tcars * busca(Tcars * bd[], int tam, string placa){
